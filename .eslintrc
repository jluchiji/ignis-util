{
  "root":      true,
  "extends":  "airbnb/base",

  "rules": {
    "new-cap": 0,
    "id-length": 0,
    "func-names": 0,
    "key-spacing": 0,
    "padded-blocks": 0,
    "no-const-assign": 2,
    "no-multi-spaces": 0,
    "no-param-reassign": 0,

    "comma-dangle": [1, "never"]
  },

  "envs": {
    "node":     true,
    "commonjs": true
  }
}
